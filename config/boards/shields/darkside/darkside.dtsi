#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

        row-gpios
            = <&pro_micro 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 0
            , <&pro_micro 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 1
            , <&pro_micro 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 2
            , <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 3
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 4
			, <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 5
			, <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 6
            ;
    };
	
    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <18>;
        rows = <7>;
// | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  |																 | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  |
// | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  |	 															 | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  |
// | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  |	 															 | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  |
// | SW1  | SW1  | SW1  | SW1  | SW1  | SW1  |				 														 		| SW1  | SW1  | SW1  | SW1  | SW1  | SW1  |
// | SW1  | SW1  | SW1  | SW1  | SW1  |																			     			   | SW1  | SW1  | SW1  | SW1  | SW1  |
// 													| SW1  |											| SW1  |
// 													| SW1  | SW1  | SW1  |				  | SW1  | SW1  | SW1  |	
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) 															RC(0,11) RC(0,12) RC(0,13) RC(0,14) RC(0,15) RC(0,16) RC(0,17)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) 															RC(1,11) RC(1,12) RC(1,13) RC(1,14) RC(1,15) RC(1,16) RC(1,17)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) 															RC(2,11) RC(2,12) RC(2,13) RC(2,14) RC(2,15) RC(2,16) RC(2,17)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)																				 RC(3,12) RC(3,13) RC(3,14) RC(3,15) RC(3,16) RC(3,17)
RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)					 					 			 			 				 			 	  RC(4,13) RC(4,14) RC(4,15) RC(4,16) RC(4,17)
														RC(5,7)											 RC(5,10)
														RC(6,7) RC(6,8) RC(5,8)			RC(5,9) RC(6,9) RC(6,10)
        >;
    };
};